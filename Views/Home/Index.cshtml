@{
    ViewData["Title"] = "FunkoShop";
}

<style>
    .uniform-img {
        height: 250px;
        object-fit: cover;
        width: 100%;
        transition: transform 0.3s ease;
    }

        .uniform-img:hover {
            transform: scale(1.05);
        }
</style>

<div class="container mt-4">

    <!-- Banner principal -->
    <div class="jumbotron bg-dark text-white p-5 rounded">
        <h1 class="display-4">🎉 Bienvenido a FunkoShop</h1>
        <p class="lead">Tu tienda favorita de figuras Funko Shop. ¡Colecciona, regala y sorprende!</p>
        <hr class="my-4">
        <a class="btn btn-primary btn-lg" asp-controller="Productos" asp-action="Index">Explorar Productos</a>
    </div>

    <!-- Categorías destacadas -->
    <div class="row text-center mt-5">
        <h2 class="mb-4">Categorías Populares</h2>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <img src="https://static1.srcdn.com/wordpress/wp-content/uploads/2025/06/marvel-logo-on-comic-art-background.jpg" class="card-img-top uniform-img" alt="Marvel">
                <div class="card-body">
                    <h5 class="card-title">Marvel</h5>
                    <a asp-controller="Productos" asp-action="Categoria" asp-route-id="Marvel" class="btn btn-outline-primary">Ver más</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <img src="https://blog.camaralia.com/wp-content/uploads/2016/01/Star-Wars-Blu-ray1.jpg" class="card-img-top uniform-img" alt="Star Wars">
                <div class="card-body">
                    <h5 class="card-title">Star Wars</h5>
                    <a asp-controller="Productos" asp-action="Categoria" asp-route-id="Star Wars" class="btn btn-outline-primary">Ver más</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <img src="https://m.media-amazon.com/images/I/719t3jd2NeL.png" class="card-img-top uniform-img" alt="Disney">
                <div class="card-body">
                    <h5 class="card-title">Disney</h5>
                    <a asp-controller="Productos" asp-action="Categoria" asp-route-id="disney" class="btn btn-outline-primary">Ver más</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Productos destacados -->
    <div class="mt-5">
        <h2 class="text-center mb-4">🔥 Productos Destacados</h2>
        <div class="row">

            <div class="col-md-3">
                <div class="card">
                    <img src="https://funko.com/dw/image/v2/BGTS_PRD/on/demandware.static/-/Sites-funko-master-catalog/default/dwbd425f48/images/funko/upload/83993_Marvel_S1_IronMan_POP_EDIT_T7_GLAM_FrontView-WEB.png?sw=800&sh=800" class="card-img-top uniform-img" alt="Funko Iron Man">
                    <div class="card-body">
                        <h5 class="card-title">Iron Man</h5>
                        <p class="card-text">₡15,000</p>
                        <a asp-controller="Productos" asp-action="Detalle" asp-route-id="1" class="btn btn-success">Ver Producto</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card">
                    <img src="https://funko.com/dw/image/v2/BGTS_PRD/on/demandware.static/-/Sites-funko-master-catalog/default/dw7ef31ae9/images/funko/upload/83796_POP_Star-Wars-A-New-Hope_Luke-Skywalker-(Red-5)_GLAM-WEB.png?sw=800&sh=800" class="card-img-top uniform-img" alt="Funko Luke Skywalker">
                    <div class="card-body">
                        <h5 class="card-title">Luke Skywalker</h5>
                        <p class="card-text">₡10,500</p>
                        <a asp-controller="Productos" asp-action="Detalle" asp-route-id="3" class="btn btn-success">Ver Producto</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card">
                    <img src="https://funko.com/dw/image/v2/BGTS_PRD/on/demandware.static/-/Sites-funko-master-catalog/default/dwd5dbb532/images/funko/upload/80366_OP_S9_Nami_POP_GLAM-1-WEB.png?sw=800&sh=800" class="card-img-top uniform-img" alt="Funko Nami">
                    <div class="card-body">
                        <h5 class="card-title">Nami</h5>
                        <p class="card-text">₡14,500</p>
                        <a asp-controller="Productos" asp-action="Detalle" asp-route-id="21" class="btn btn-success">Ver Producto</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card">
                    <img src="https://funko.com/dw/image/v2/BGTS_PRD/on/demandware.static/-/Sites-funko-master-catalog/default/dweeda6bb7/images/funko/upload/86314_POP_NBA_Chicago-Bulls_Michael-Jordan-(89-The-Shot)_GLAM-1-WEB.png?sw=800&sh=800" class="card-img-top uniform-img" alt="Funko Michael Jordan">
                    <div class="card-body">
                        <h5 class="card-title">Michael Jordan</h5>
                        <p class="card-text">₡14,000</p>
                        <a asp-controller="Productos" asp-action="Detalle" asp-route-id="27" class="btn btn-success">Ver Producto</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>