@{
    ViewData["Title"] = "Confirmación de Pago";
    var transactionId = ViewBag.TransactionId?.ToString() ?? "NO-GENERADO";
    var total = ViewBag.Total?.ToString("C") ?? "0,00";
}

<div class="container mt-4">
    <div class="card border-success">
        <div class="card-header bg-success text-white">
            <h3><i class="bi bi-check-circle"></i> Confirmación de Pago</h3>
        </div>
        <div class="card-body">
            @if (transactionId != "NO-GENERADO")
            {
                <div class="alert alert-success">
                    <h4><i class="bi bi-check-circle"></i> ¡Transacción Exitosa!</h4>
                    <div class="mt-3">
                        <p><strong>ID Transacción:</strong> @transactionId</p>
                        <p><strong>Monto:</strong> @total</p>
                    </div>
                </div>

                <div class="alert alert-info">
                    <h5><i class="bi bi-lightbulb"></i> Modo Simulación</h5>
                    <p class="mb-0">
                        Esta es una transacción simulada con datos de prueba.
                    </p>
                </div>
            }
            else
            {
                <div class="alert alert-danger">
                    <h4><i class="bi bi-exclamation-triangle"></i> Error en la transacción</h4>
                    <p>No se pudo generar un ID de transacción válido.</p>
                </div>
            }

            <div class="d-grid gap-2 mt-3">
                <a asp-controller="Productos" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-arrow-left"></i> Volver a la tienda
                </a>
            </div>
        </div>
    </div>
</div>