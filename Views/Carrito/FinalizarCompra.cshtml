@model ProyectoPrograVI.Models.PagoRequest
@{
    ViewData["Title"] = "Finalizar Compra";
}

<h2 class="mb-4">💳 Finalizar Compra</h2>

@if (TempData["MensajeError"] != null)
{
    <div class="alert alert-danger">@TempData["MensajeError"]</div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Información de Pago</h4>
            </div>
            <div class="card-body">
                <form asp-action="FinalizarCompra" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="NumeroTarjeta" class="form-label">Número de Tarjeta</label>
                        <input asp-for="NumeroTarjeta" class="form-control" placeholder="4111 1111 1111 1111" />
                        <span asp-validation-for="NumeroTarjeta" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label">Nombre del Titular</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ej: Juan Perez" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="FechaVencimiento" class="form-label">Fecha de Expiración</label>
                            <input asp-for="FechaVencimiento" class="form-control" placeholder="MM/YY" />
                            <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Icvv" class="form-label">CVV</label>
                            <input asp-for="Icvv" class="form-control" placeholder="123" />
                            <span asp-validation-for="Icvv" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Monto Total</label>
                        <input class="form-control" value="₡@ViewBag.Total.ToString("N2")" readonly />
                        <input type="hidden" asp-for="Monto" value="@ViewBag.Total" />
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-credit-card"></i> Pagar Ahora
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Volver al Carrito
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">Datos de Prueba</h4>
            </div>
            <div class="card-body">
                <h5>Tarjetas de Prueba:</h5>
                <ul class="list-group list-group-flush mb-3">
                    <li class="list-group-item">
                        <strong>Visa:</strong> 4111 1111 1111 1111
                    </li>
                    <li class="list-group-item">
                        <strong>Mastercard:</strong> 5555 5555 5555 4444
                    </li>
                </ul>
                <p class="text-muted">
                    <small>
                        Usa cualquier fecha futura y CVV de 3 dígitos.
                        El pago será simulado.
                    </small>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}