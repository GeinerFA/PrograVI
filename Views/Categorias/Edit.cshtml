@model ProyectoPrograVI.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoría";
}

<h2 class="mb-3">Editar categoría</h2>

<form asp-action="Edit" class="border p-4 shadow-sm rounded bg-light">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="bi bi-pencil"></i> Guardar cambios
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>