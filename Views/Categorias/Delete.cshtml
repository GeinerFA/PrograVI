@model ProyectoPrograVI.Models.Categoria

@{
    ViewData["Title"] = "Eliminar categoría";
}

<div class="container mt-5">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">¿Estás seguro que querés eliminar esta categoría?</h4>
        </div>
        <div class="card-body">
            <p class="mb-3"><strong>ID de categoría:</strong> @Model.Id</p>
            <p class="mb-4"><strong>Nombre:</strong> @Model.Nombre</p>

            <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash3"></i> Eliminar definitivamente
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left-circle"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}