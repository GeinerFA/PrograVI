@model List<ProyectoPrograVI.Models.Producto>

@if (!Model.Any())
{
    <div class="alert alert-warning text-center"> No se encontraron resultados con los filtros aplicados.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered align-middle text-center" id="tablaReporte">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Categoría</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in Model)
                {
                    <tr>
                        <td>@producto.Id</td>
                        <td>@producto.Nombre</td>
                        <td>₡@producto.Precio.ToString("N2")</td>
                        <td>@producto.CantStock</td>
                        <td>@producto.NombreCategoria</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
