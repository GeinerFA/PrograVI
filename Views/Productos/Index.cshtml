@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@model List<ProyectoPrograVI.Models.Producto>

@{
    ViewData["Title"] = "Productos";
    var rol = HttpContextAccessor.HttpContext.Session.GetString("Rol");
}

<h2 class="mb-4">Lista de productos</h2>

@if (rol == "Administrador")
{
    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Agregar producto
        </a>
    </p>
}

<!-- 🔎 Formulario de filtros -->
@using (Html.BeginForm("Index", "Productos", FormMethod.Get))
{
    <div class="row mb-3">
        <div class="col-md-3">
            <input type="text" name="nombre" class="form-control" placeholder="Buscar por nombre" value="@ViewBag.Nombre" />
        </div>
        <div class="col-md-2">
            <input type="number" step="0.01" name="precioMin" class="form-control" placeholder="Precio mínimo" value="@ViewBag.PrecioMin" />
        </div>
        <div class="col-md-2">
            <input type="number" step="0.01" name="precioMax" class="form-control" placeholder="Precio máximo" value="@ViewBag.PrecioMax" />
        </div>
        <div class="col-md-3">
            <select name="categoria" class="form-control">
                <option value="">-- Todas las categorías --</option>
                @foreach (var cat in ViewBag.Categorias as List<string>)
                {
                    if (ViewBag.Categoria == cat)
                    {
                        <option value="@cat" selected>@cat</option>
                    }
                    else
                    {
                        <option value="@cat">@cat</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-success w-100">
                <i class="bi bi-search"></i> Filtrar
            </button>
        </div>
    </div>
}

<!-- 📋 Tabla de productos -->
<table class="table table-bordered table-striped align-middle text-center">
    <thead class="table-dark">
        <tr>
            <th>Imagen</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Categoría</th>
            <th>Ver</th>
            @if (rol == "Administrador")
            {
                <th>Acciones</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagenUrl))
                    {
                        <img src="@item.ImagenUrl" alt="Imagen de @item.Nombre" style="max-height: 80px; border-radius: 6px;" />
                    }
                    else
                    {
                        <span class="text-muted">Sin imagen</span>
                    }
                </td>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>₡@item.Precio.ToString("N2")</td>
                <td>@item.CantStock</td>
                <td>@item.NombreCategoria</td>

                <td>
                    <a asp-controller="Productos" asp-action="Detalle" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                        <i class="bi bi-eye"></i> Ver Producto
                    </a>
                </td>

                @if (rol == "Administrador")
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash3"></i> Eliminar
                        </a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
