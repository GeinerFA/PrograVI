@model ProyectoPrograVI.Models.Producto

@{
    ViewData["Title"] = "Editar producto";
}

<h2 class="mb-4">Editar producto</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImagenUrl"></label>
        <input asp-for="ImagenUrl" class="form-control" />
        <span asp-validation-for="ImagenUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <input asp-for="Descripcion" class="form-control" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CantStock"></label>
        <input asp-for="CantStock" class="form-control" />
        <span asp-validation-for="CantStock" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdCategoria"></label>
        <input asp-for="IdCategoria" class="form-control" />
        <span asp-validation-for="IdCategoria" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}