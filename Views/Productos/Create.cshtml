@model ProyectoPrograVI.Models.Producto

@{
    ViewData["Title"] = "Nuevo producto";
}

<h2>Nuevo producto</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ImagenUrl"></label>
        <input asp-for="ImagenUrl" class="form-control" />
        <span asp-validation-for="ImagenUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <input asp-for="Descripcion" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CantStock"></label>
        <input asp-for="CantStock" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IdCategoria"></label>
        <input asp-for="IdCategoria" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>