@model ProyectoPrograVI.Models.Usuario
@{
    ViewData["Title"] = "Registrarse";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h4><i class="bi bi-person-plus"></i> Registro de Usuario</h4>
                </div>
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <form asp-action="Registrar" method="post">
                        <div class="form-floating mb-3">
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre completo" />
                            <label asp-for="Nombre">Nombre completo</label>
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" type="email" class="form-control" placeholder="Correo" />
                            <label asp-for="Email">Correo electrónico</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" />
                            <label asp-for="Password">Contraseña</label>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Telefono" class="form-control" placeholder="Teléfono" />
                            <label asp-for="Telefono">Teléfono</label>
                            <span asp-validation-for="Telefono" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Direccion" class="form-control" placeholder="Dirección" />
                            <label asp-for="Direccion">Dirección</label>
                            <span asp-validation-for="Direccion" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Rol">Rol</label>
                            <select asp-for="Rol" class="form-select">
                                <option value="Usuario">Usuario</option>
                                <option value="Administrador">Administrador</option>
                            </select>
                            <span asp-validation-for="Rol" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Login" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Registrarse
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}